<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:srcCompat="@drawable/ilogo" />

    <EditText
        android:id="@+id/et_correoM"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:background="@color/darkgray"
        android:hint="@string/digite_el_correo"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:srcCompat="@android:color/transparent" />

    <EditText
        android:id="@+id/et_contraseñaM"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/darkgray"
        android:hint="@string/digite_la_contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:srcCompat="@android:color/transparent" />

    <Button
        android:id="@+id/bt_sesion"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="82dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:text="Iniciar sesión"
        android:textColor="@color/floralwhite"
        android:textColorHint="@color/aliceblue" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@android:color/transparent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="213dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textDirection="inherit"
            android:textIsSelectable="false" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_regi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:text="¿Aún no estás registrado?"
        android:textColor="@color/blue"
        android:textColorHint="@color/aliceblue"
        android:textSize="15sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="291dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/inombrer" />


    </LinearLayout>